<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <AssemblyName>SpaceEngineers.Core.CompositionRoot</AssemblyName>
    <RootNamespace>SpaceEngineers.Core.CompositionRoot</RootNamespace>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Version>1.0.0-alpha</Version>
    <Description>Composition root for netcore application</Description>
    <PackageTags>SpaceEngineers Core CompositionRoot</PackageTags>
    <Company>SpaceEngineers</Company>
    <Authors>SpaceEngineers</Authors>
    <PackageLicenseUrl>https://github.com/warning-explosive/Core</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/warning-explosive/Core</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SimpleInjector" Version="4.7.1" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Extensions\TypeExtensionsImpl.cs">
      <DependentUpon>TypeExtensions.cs</DependentUpon>
    </Compile>
    <Compile Update="Extensions\MethodExtensionsImpl.cs">
      <DependentUpon>MethodExtensions.cs</DependentUpon>
    </Compile>
    <Compile Update="Extensions\ExceptionHandlerImpl.cs">
      <DependentUpon>ExceptionExtensions.cs</DependentUpon>
    </Compile>
    <Compile Update="TypeInfo.cs">
      <DependentUpon>TypeInfoStorage.cs</DependentUpon>
    </Compile>
    <Compile Update="ServiceRegistrationInfo.cs">
      <DependentUpon>DependencyContainer.cs</DependentUpon>
    </Compile>
    <Compile Update="Extensions\ReferenceEqualityComparer.cs">
      <DependentUpon>ObjectExtensions.DeepCopy.cs</DependentUpon>
    </Compile>
    <Compile Update="LifeStyleMapper.cs">
      <DependentUpon>DependencyContainer.cs</DependentUpon>
    </Compile>
  </ItemGroup>

</Project>
