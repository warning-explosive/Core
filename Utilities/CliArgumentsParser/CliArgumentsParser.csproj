<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <AssemblyName>SpaceEngineers.Core.Utilities.CliArgumentsParser</AssemblyName>
    <RootNamespace>SpaceEngineers.Core.Utilities.CliArgumentsParser</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>Utilities for netcore application</Description>
    <PackageTags>SpaceEngineers Core Utilities CliArgumentsParser</PackageTags>
    <Company>SpaceEngineers</Company>
    <Authors>SpaceEngineers</Authors>
    <RepositoryUrl>https://github.com/warning-explosive/Core</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\CompositionRoot\CompositionRoot.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="CliArgumentsParserImpl.cs">
      <DependentUpon>ICliArgumentsParser.cs</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="GitVersionTask" Version="5.1.2">
	  <PrivateAssets>All</PrivateAssets>
	</PackageReference>
  </ItemGroup>

</Project>