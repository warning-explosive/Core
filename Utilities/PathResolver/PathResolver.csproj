<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <AssemblyName>SpaceEngineers.Core.Utilities.PathResolver</AssemblyName>
    <RootNamespace>SpaceEngineers.Core.Utilities.PathResolver</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.0.0-alpha</Version>
    <Description>Utilities for netcore application</Description>
    <PackageTags>SpaceEngineers Core Utilities PathResolver</PackageTags>
    <Company>SpaceEngineers</Company>
    <Authors>SpaceEngineers</Authors>
    <RepositoryUrl>https://github.com/warning-explosive/Core</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\CompositionRoot\CompositionRoot.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="PathResolverImpl.cs">
      <DependentUpon>IPathResolver.cs</DependentUpon>
    </Compile>
    <Compile Update="PathResolverImpl.Filters.cs">
      <DependentUpon>IPathResolver.cs</DependentUpon>
    </Compile>
    <Compile Update="PathResolverInfo.cs">
      <DependentUpon>IPathResolver.cs</DependentUpon>
    </Compile>
  </ItemGroup>

</Project>