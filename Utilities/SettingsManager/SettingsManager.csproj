<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <AssemblyName>SpaceEngineers.Core.SettingsManager</AssemblyName>
    <RootNamespace>SpaceEngineers.Core.SettingsManager</RootNamespace>
    <Company>SpaceEngineers</Company>
    <Authors>SpaceEngineers</Authors>
    <RepositoryUrl>https://github.com/warning-explosive/Core</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <RunAnalyzersDuringBuild>true</RunAnalyzersDuringBuild>
    <RunAnalyzersDuringLiveAnalysis>true</RunAnalyzersDuringLiveAnalysis>
    <RunAnalyzers>true</RunAnalyzers>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <Nullable>enable</Nullable>
    <TieredCompilation>true</TieredCompilation>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="GitVersionTask" Version="5.1.2">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
    <PackageReference Include="YamlDotNet" Version="8.0.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\CompositionRoot\CompositionRoot.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="YamlFormatter.cs">
      <DependentUpon>IYamlFormatter.cs</DependentUpon>
    </Compile>
    <Compile Update="SettingsMangerImpl.cs">
      <DependentUpon>ISettingsManger.cs</DependentUpon>
    </Compile>
    <Compile Update="IFileSystemSettings.cs">
      <DependentUpon>ISettings.cs</DependentUpon>
    </Compile>
    <Compile Update="IYamlFormatter.cs">
      <DependentUpon>FileSystemFormatterBase.cs</DependentUpon>
    </Compile>
    <Compile Update="FileSystemFormatterBase.cs">
      <DependentUpon>IAsyncFormatter.cs</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>