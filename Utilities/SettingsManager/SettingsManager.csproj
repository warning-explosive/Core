<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <AssemblyName>SpaceEngineers.Core.SettingsManager</AssemblyName>
    <RootNamespace>SpaceEngineers.Core.SettingsManager</RootNamespace>
    <IsPackable>true</IsPackable>
    <Title>SpaceEngineers.Core.SettingsManager</Title>
    <Authors>SpaceEngineers</Authors>
    <Company>SpaceEngineers</Company>
    <PackageDescription>SpaceEngineers.Core.SettingsManager</PackageDescription>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/warning-explosive/Core</RepositoryUrl>
    <Copyright>Copyright (c) 2019</Copyright>
    <CodeAnalysisRuleSet>..\..\ruleset.ruleset</CodeAnalysisRuleSet>
    <RunAnalyzersDuringBuild>true</RunAnalyzersDuringBuild>
    <RunAnalyzersDuringLiveAnalysis>true</RunAnalyzersDuringLiveAnalysis>
    <RunAnalyzers>true</RunAnalyzers>
    <CopyLocalLockFileAssemblies>false</CopyLocalLockFileAssemblies>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <TieredCompilation>true</TieredCompilation>
    <Library />
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.9.8" />
    <PackageReference Include="Microsoft.CodeQuality.Analyzers" Version="2.9.8" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.118" />
    <PackageReference Include="YamlDotNet" Version="8.0.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\CompositionRoot\CompositionRoot.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="YamlFormatter.cs">
      <DependentUpon>FileSystemFormatterBase.cs</DependentUpon>
    </Compile>
    <Compile Update="SettingsManagerImpl.cs">
      <DependentUpon>ISettingsManger.cs</DependentUpon>
    </Compile>
    <Compile Update="IFileSystemSettings.cs">
      <DependentUpon>ISettings.cs</DependentUpon>
    </Compile>
    <Compile Update="FileSystemFormatterBase.cs">
      <DependentUpon>IAsyncFormatter.cs</DependentUpon>
    </Compile>
    <Compile Update="IYamlSettings.cs">
      <DependentUpon>IFileSystemSettings.cs</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>