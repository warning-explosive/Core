<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
      <TargetFramework>netcoreapp3.0</TargetFramework>
      <LangVersion>latest</LangVersion>
      <Nullable>enable</Nullable>
		  <AssemblyName>SpaceEngineers.Core.Utilities.Test</AssemblyName>
		  <RootNamespace>SpaceEngineers.Core.Utilities.Test</RootNamespace>
		  <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		  <Description>Utilities for netcore application</Description>
		  <PackageTags>SpaceEngineers Core Utilities Test</PackageTags>
		  <Company>SpaceEngineers</Company>
		  <Authors>SpaceEngineers</Authors>
		  <RepositoryUrl>https://github.com/warning-explosive/Core</RepositoryUrl>
		  <RepositoryType>git</RepositoryType>
    </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
